{% extends "base.html.twig"%}

{% block title %}
	Accueil
{% endblock %}
{% block body %}
	<h1>Nos produits phares
	</h1>

	<div class="row">
		{% for p in products %}
			<div class="col">
				<div class="card">
					<img src="{{p.mainPicture}}" class="img-fluid">
					<div class="card-body">
						<div class="card-title">{{p.name}}
							({{p.price / 100}}
							&euro;)</div>
						<span class="badge badge-info">
							{{p.category.name}}
						</span>
						<p class="card-text">{{p.shortDescription}}</p>
						<a href="{{path('product_show',{'category_slug':p.category.slug,'slug':p.slug})}}" class="btn btn-outline-primary btn-sm">Details</a>
						<a href="#" class="btn btn-outline-success btn-sm">Acheter</a>
					</div>
				</div>
			</div>
		{% endfor %}
	</div>
	<h2>Un service irreprochable</h2>
	<p>Lorem ipsum dolor sit amet consectetur adipisicing elit. A numquam sint sed aperiam? Cum, hic?</p>

	<div class="row">
		{% include "shared/_assurance.html.twig" with {
            'color': 'primary',
            'icone': 'fas fa-truck',
            'text': "Lorem ipsum dolor sit amet consectetur adipisicing elit. Eum quas iusto voluptate optio debitis aperiam?"
        } %}
		{% include "shared/_assurance.html.twig" with {
            'color': 'success',
            'icone': 'fas fa-check',
            'text': "Lorem ipsum dolor sit amet consectetur adipisicing elit. Eum quas iusto voluptate optio debitis aperiam?"
        } %}
		{% include "shared/_assurance.html.twig" with {
            'color': 'warning',
            'icone': 'fas fa-lock',
            'text': "Lorem ipsum dolor sit amet consectetur adipisicing elit. Eum quas iusto voluptate optio debitis aperiam?"
        } %}
	</div>
{% endblock %}
