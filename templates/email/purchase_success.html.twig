<h1>Bravo pour votre commande N°-{{ purchase.id }}</h1>

<p>Merci à vous
	{{user.fullname}}</p>
<table>
	<thead>
		<th>Produit</th>
		<th>Quantité</th>
		<th>Prix Unitaire</th>
		<th>Total</th>
	</thead>
	<tbody>
		{% for p in purchase.purchaseItems %}
			<tr>
				<td>{{p.productName}}</td>
				<td>{{p.quantity}}</td>
				<td>{{p.productPrice / 100}}
					€</td>
				<td>{{p.total / 100}}
					€</td>
			</tr>
		{% endfor %}
	</tbody>
	<tfoot>
		<tr>
			<td colspan="3">Total :</td>
			<td>{{ purchase.total / 100}}
				€</td>
		</tr>
	</tfoot>
</table>
