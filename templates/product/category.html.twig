{% extends 'base.html.twig' %}

{% block title %}Categorie:
	{{category.name}}
{% endblock %}

{% block body %}
	<ol class="breadcrumb">
		<li class="breadcrumb-item">
			<a href="{{path('home')}}">Accueil</a>
		</li>
		<li class="breadcrumb-item active">
			{{category.name}}
		</li>
	</ol>
	<h1>{{category.name}}</h1>
	<div class="row">
		{% for p in category.products %}
			<div class="col-3">
				<div class="card">
					<img src="{{p.mainPicture}}" class="img-fluid">
					<div class="card-body">
						<div class="card-title">{{p.name}}
							({{p.price / 100}}
							&euro;)</div>
						<span class="badge badge-info">
							{{p.category.name}}
						</span>
						<p class="card-text">{{p.shortDescription}}</p>
						<a href="{{path('product_show',{'category_slug':p.category.slug,'slug':p.slug})}}" class="btn btn-outline-primary btn-sm">Details</a>
						<a href="#" class="btn btn-outline-success btn-sm">Acheter</a>
					</div>
				</div>
			</div>
		{% endfor %}
	</div>
{% endblock %}
